@model Aliquota.Domain.Models.CadastroInvestidor

@{
    ViewData["Title"] = "Editar Aplicação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Simular Aplicação Financeira</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoAplicacao" class="control-label">Nome da Aplicacao</label>
                <select asp-for="TipoAplicacao" class="form-control">
                    <option>Tesouro Direto</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ValorAplicacao" class="control-label"></label>
                <input asp-for="ValorAplicacao" class="form-control" />
                <span asp-validation-for="ValorAplicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAplicacao" class="control-label"></label>
                <input asp-for="DataAplicacao" class="form-control" />
                <span asp-validation-for="DataAplicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataResgate" class="control-label"></label>
                <input asp-for="DataResgate" class="form-control" />
                <span asp-validation-for="DataResgate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
